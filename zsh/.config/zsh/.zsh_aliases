# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# List directory contents
alias ls='ls -hF --color=auto'
alias ll='ls -lAhF --color=auto --group-directories-first'
alias tree='tree -C'

# Safety features
alias cp='cp -vi'
alias mv='mv -vi'
alias rm='rm -vi'
alias del='trash-put'

# File operations
alias cat='bat'
alias gh='history | grep'

# Development
alias py='python3'
alias sa='source venv/bin/activate'

# Editors
alias e='emacsclient --tty'
alias v='vim'

# System
alias cls='clear'
alias zshreload='source ~/.config/zsh/.zshrc && echo Zsh config reloaded'
